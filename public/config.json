{
    "workflowApiVersion": "1.1",
    "metaData": {
       "icon": "images/iconSmall.png",
       "category": "message"
    },
    "type": "REST",
    "lang": {
       "en-US": {
           "name": "Twilio SMS",
           "description": "Send Twilio SMS with Journey Builder",
           "TwilioMessage":"test"
       }
    },
    "arguments": {
        "execute": {
            "inArguments": [
                {
                  "email": "{{Contact.Attribute.TwilioV1.EmailAddress}}",
                  "to": "{{Contact.Attribute.TwilioV1.TwilioNumber}}",
                  "body": "{{Contact.Attribute.TwilioV1.Body}}",
                }               
            ],
            "outArguments": [
                {
                    "sid": ""
                }
            ],
            "url": "https://twilio-sfmc-digitalaquila.herokuapp.com/journeybuilder/execute",
            "verb": "POST",
            "body": "",
            "format": "json",
            "useJwt": false,
            "timeout": 2000
        }
    },
    "configurationArguments": {
      "applicationExtensionKey": "8160cad8-f978-40c3-bf2f-7a842a226dc0",
       "save": {
           "url": "https://twilio-sfmc-digitalaquila.herokuapp.com/journeybuilder/save",
            "verb": "POST",
            "body": "",
            "format": "json",
            "useJwt": false,
            "timeout": 2000
       },
       "publish": {
           "url": "https://twilio-sfmc-digitalaquila.herokuapp.com/journeybuilder/publish",
            "verb": "POST",
            "body": "",
            "format": "json",
            "useJwt": false,
            "timeout": 2000
       },
       "validate": {
           "url": "https://twilio-sfmc-digitalaquila.herokuapp.com/journeybuilder/validate",
            "verb": "POST",
            "body": "",
            "format": "json",
            "useJwt": false,
            "timeout": 2000
       },
       "TestSave": {
            "url": "https://twilio-sfmc-digitalaquila.herokuapp.com/journeybuilder/testSave",
            "verb": "POST",
            "body": "",
            "format": "json",
            "useJwt": false,
            "timeout": 2000
        },
       "stop": {
           "url": "https://twilio-sfmc-digitalaquila.herokuapp.com/journeybuilder/stop",
            "verb": "POST",
            "body": "",
            "format": "json",
            "useJwt": false,
            "timeout": 2000
       }
    },
    "wizardSteps": [
       { "label": "Create SMS Message", "key": "step1" }
    ],
    "userInterfaces": {
       "configModal": {
           "height": 600,
           "width": 800,
           "fullscreen": false
       }
    },
    "schema": {
        "arguments": {
            "execute": {
                "inArguments": [
                    {
                        "accountSid": {
                            "dataType": "String",
                            "isNullable": false,
                            "direction": "in"   
                        }
                    },                    
                    {
                        "authToken": {
                            "dataType": "String",
                            "isNullable": false,
                            "direction": "in"   
                        }
                    },                    
                    {
                        "messagingService": {
                            "dataType": "String",
                            "isNullable": true,
                            "direction": "in"   
                        }
                    },                    
                    {
                        "to": {
                            "dataType": "Phone",
                            "isNullable": false,
                            "direction": "in"   
                        }
                    },
                    {
                        "body": {
                            "dataType": "String",
                            "isNullable": false,
                            "direction": "in"   
                        }
                    },                    
                    {
                        "email": {
                            "dataType": "Email",
                            "isNullable": true,
                            "direction": "in"
                        }
                    }
                ],
                "outArguments": [
                    {
                        "sid": {
                            "dataType": "String",
                            "isNullable": false,
                            "direction": "out",
                            "access": "visible"
                        }
                    }
                ]
            }
        }
    }
}
